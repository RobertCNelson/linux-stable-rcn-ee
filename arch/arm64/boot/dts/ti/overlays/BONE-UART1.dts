/dts-v1/;
/plugin/;

/*
 * Helper to show loaded overlays under: /proc/device-tree/chosen/overlays/
 */
&{/chosen} {
	overlays {
		BONE-UART1.kernel = __TIMESTAMP__;
	};
};

&bone_uart_1 {
	/* tested with sudo agetty 115200 ttyS4 */
	status = "okay";
};
