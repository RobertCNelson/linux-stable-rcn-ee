/dts-v1/;
#include <dt-bindings/leds/common.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include "k3-am625.dtsi"
#include "k3-am62x-osd62x-pm-common.dtsi"

/ {
	compatible = "oct,am625-osd625-brk", "ti,am625";
	model = "Octavo Systems OSD625 BRK";

	opp-table {
		/* Add 1.4GHz OPP for OSD625 BRK board. Requires VDD_CORE to be at 0.85V */
		opp-1400000000 {
			opp-hz = /bits/ 64 <1400000000>;
			opp-supported-hw = <0x01 0x0004>;
			clock-latency-ns = <6000000>;
		};
	};

	aliases {
		serial2 = &main_uart0;
		mmc1 = &sdhci1;
		usb0 = &usb0;
		usb1 = &usb1;
		i2c0 = &main_i2c0;
		i2c1 = &main_i2c1;
		i2c3 = &main_i2c3;
		i2c4 = &wkup_i2c0;
	};

	chosen {
		stdout-path = "serial2:115200n8";
	};

	reserved-memory {
		#address-cells = <2>;
		#size-cells = <2>;
		ranges;

		ramoops@9c700000 {
			compatible = "ramoops";
			reg = <0x00 0x9c700000 0x00 0x00100000>;
			record-size = <0x8000>;
			console-size = <0x8000>;
			ftrace-size = <0x00>;
			pmsg-size = <0x8000>;
		};

		rtos_ipc_memory_region: ipc-memories@9c800000 {
			compatible = "shared-dma-pool";
			reg = <0x00 0x9c800000 0x00 0x00300000>;
			no-map;
		};

		mcu_m4fss_dma_memory_region: m4f-dma-memory@9cb00000 {
			compatible = "shared-dma-pool";
			reg = <0x00 0x9cb00000 0x00 0x100000>;
			no-map;
		};

		mcu_m4fss_memory_region: m4f-memory@9cc00000 {
			compatible = "shared-dma-pool";
			reg = <0x00 0x9cc00000 0x00 0xe00000>;
			no-map;
		};

		/* global cma region */
		linux,cma {
			compatible = "shared-dma-pool";
			reusable;
			size = <0x00 0x8000000>;
			linux,cma-default;
		};

		wkup_r5fss0_core0_dma_memory_region: r5f-dma-memory@9da00000 {
			compatible = "shared-dma-pool";
			reg = <0x00 0x9da00000 0x00 0x00100000>;
			no-map;
		};

		wkup_r5fss0_core0_memory_region: r5f-memory@9db00000 {
			compatible = "shared-dma-pool";
			reg = <0x00 0x9db00000 0x00 0x00c00000>;
			no-map;
		};

		secure_tfa_ddr: tfa@9e780000 {
			reg = <0x00 0x9e780000 0x00 0x80000>;
			alignment = <0x1000>;
			no-map;
		};

		secure_ddr: optee@9e800000 {
			reg = <0x00 0x9e800000 0x00 0x01800000>; /* for OP-TEE */
			alignment = <0x1000>;
			no-map;
		};

		hyp_mem: jailhouse@dfa00000 {
			reg = <0x0 0xdfa00000 0x0 0x20600000>; /* For jailhouse */
			alignment = <0x1000>;
			no-map;
		};
	};

	leds {
		bootph-all;
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&usr_led_pins_default>;

		led-0 {
			bootph-all;
			gpios = <&main_gpio1 9 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "heartbeat";
			function = LED_FUNCTION_HEARTBEAT;
			default-state = "off";
		};

		led-1 {
			bootph-all;
			gpios = <&main_gpio1 10 GPIO_ACTIVE_HIGH>;
			linux,default-trigger = "mmc1";
			function = LED_FUNCTION_SD;
			default-state = "keep";
		};

		led-2 {
			bootph-all;
			gpios = <&main_gpio1 11 GPIO_ACTIVE_HIGH>;
			default-state = "off";
		};

		led-3 {
			bootph-all;
			gpios = <&main_gpio1 12 GPIO_ACTIVE_HIGH>;
			function = LED_FUNCTION_CPU;
			default-state = "keep";
		};
	};

	vmain_con: regulator-0 {
		/* Main USB-C 5V input */
		bootph-all;
		compatible = "regulator-fixed";
		regulator-name = "vmain_con";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		regulator-always-on;
		regulator-boot-on;
	};

	vcc_3v3: regulator-1 {
		/* Output of TLV62595 */
		bootph-all;
		compatible = "regulator-fixed";
		regulator-name = "vcc_3v3";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		vin-supply = <&vmain_con>;
		regulator-always-on;
		regulator-boot-on;
	};

	vcc_3v3_sys: regulator-2 {
		/* output of TPS22965 */
		bootph-all;
		compatible = "regulator-fixed";
		regulator-name = "vcc_3v3_sys";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		vin-supply = <&vcc_3v3>;
		regulator-always-on;
		regulator-boot-on;
	};

	vdd_mmc1: regulator-3 {
		/* SD card power switch TPS22918DBVR */
		bootph-all;
		compatible = "regulator-fixed";
		regulator-name = "vdd_mmc1";
		pinctrl-names = "default";
		pinctrl-0 = <&vdd_mmc1_pins_default>;
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-boot-on;
		enable-active-high;
		vin-supply = <&vcc_3v3_sys>;
		gpio = <&main_gpio0 12 GPIO_ACTIVE_HIGH>;
	};

	vdd_sd_dv: regulator-4 {
		/* SD High Speed GPIO switch connects to VSEL of PMIC */
		bootph-all;
		compatible = "regulator-gpio";
		regulator-name = "sd_hs200_switch";
		pinctrl-names = "default";
		pinctrl-0 = <&vdd_sd_dv_pins_default>;
		regulator-min-microvolt = <1800000>;
		regulator-max-microvolt = <3300000>;
		regulator-boot-on;
		vin-supply = <&vcc_3v3>;
		gpios = <&main_gpio1 49 GPIO_ACTIVE_HIGH>;
		states = <1800000 0x0>,
			 <3300000 0x1>;
	};
};

&main_pmx0 {
	usr_led_pins_default: usr-led-default-pins {
		pinctrl-single,pins = <
			AM62X_IOPAD(0x19c, PIN_OUTPUT, 7) /* MCASP0_AXR1.GPIO1_9 */
			AM62X_IOPAD(0x1a0, PIN_OUTPUT, 7) /* MCASP0_AXR0.GPIO1_10 */
			AM62X_IOPAD(0x1a8, PIN_OUTPUT, 7) /* MCASP0_AFSX.GPIO1_12 */
			AM62X_IOPAD(0x1a4, PIN_OUTPUT, 7) /* MCASP0_ACLKX.GPIO1_11 */
		>;
	};

	main_uart0_pins_default: main-uart0-default-pins {
		bootph-all;
		pinctrl-single,pins = <
			AM62X_IOPAD(0x1c8, PIN_INPUT, 0) /* UART0_RXD.UART0_RXD */
			AM62X_IOPAD(0x1cc, PIN_OUTPUT, 0) /* UART0_TXD.UART0_TXD */
		>;
	};

	main_i2c0_pins_default: main-i2c0-default-pins {
		bootph-all;
		pinctrl-single,pins = <
			AM62X_IOPAD(0x1e0, PIN_INPUT_PULLUP, 0) /* I2C0_SCL.I2C0_SCL */
			AM62X_IOPAD(0x1e4, PIN_INPUT_PULLUP, 0) /* I2C0_SDA.I2C0_SDA */
			AM62X_IOPAD(0x004, PIN_INPUT, 7) /* OSPI0_LBCLKO.GPIO0_1 */
		>;
	};

	mikrobus1_i2c_pins_default: mikrobus1-i2c-default-pins {
		pinctrl-single,pins = <
			AM62X_IOPAD(0x01e8, PIN_INPUT_PULLUP, 0) /* I2C1_SCL.I2C1_SCL */
			AM62X_IOPAD(0x01ec, PIN_INPUT_PULLUP, 0) /* I2C1_SDA.I2C1_SDA */
		>;
	};

	mikrobus1_uart_pins_default: mikrobus1-uart-default-pins {
		pinctrl-single,pins = <
			AM62X_IOPAD(0x01d8, PIN_INPUT, 1) /* MCAN0_TX.UART5_RXD */
			AM62X_IOPAD(0x01dc, PIN_OUTPUT, 1) /* MCAN0_RX.UART5_TXD */
		>;
	};

	mikrobus1_spi_pins_default: mikrobus1-spi-default-pins {
		pinctrl-single,pins = <
			AM62X_IOPAD(0x01bc, PIN_INPUT, 0) /* SPI0_CLK.SPI0_CLK */
			AM62X_IOPAD(0x01b4, PIN_INPUT, 0) /* SPI0_CS0.SPI0_CS0 */
			AM62X_IOPAD(0x01c0, PIN_INPUT, 0) /* SPI0_D0.SPI0_D0 */
			AM62X_IOPAD(0x01c4, PIN_INPUT, 0) /* SPI0_D1.SPI0_D1 */
		>;
	};

	mikrobus1_pwm_pins_default: mikrobus1-pwm-default-pins {
		pinctrl-single,pins = <
		AM62X_IOPAD(0x01ac, PIN_OUTPUT, 6) /* MCASP0_AFSR.EHRPWM0_A */
		>;
	};

	mikrobus0_i2c_pins_default: mikrobus0-i2c-default-pins {
		pinctrl-single,pins = <
			AM62X_IOPAD(0x0218, PIN_INPUT_PULLUP, 1) /* MMC0_CLK.I2C3_SCL */
			AM62X_IOPAD(0x0220, PIN_INPUT_PULLUP, 1) /* MMC0_CMD.I2C3_SDA */
		>;
	};

	mikrobus0_uart_pins_default: mikrobus0-uart-default-pins {
		pinctrl-single,pins = <
			AM62X_IOPAD(0x01f8, PIN_INPUT, 1) /* MMC0_DAT7.UART2_RXD */
			AM62X_IOPAD(0x01fc, PIN_OUTPUT, 1) /* MMC0_DAT6.UART2_TXD */
		>;
	};

	mikrobus0_spi_pins_default: mikrobus0-spi-default-pins {
		pinctrl-single,pins = <
			AM62X_IOPAD(0x0214, PIN_INPUT, 6) /* MMC0_DAT0.SPI2_CLK */
			AM62X_IOPAD(0x0210, PIN_INPUT, 6) /* MMC0_DAT1.SPI2_CS0 */
			AM62X_IOPAD(0x0200, PIN_INPUT, 6) /* MMC0_DAT5.SPI2_D0 */
			AM62X_IOPAD(0x0204, PIN_INPUT, 6) /* MMC0_DAT4.SPI2_D1 */
		>;
	};

	mikrobus0_pwm_pins_default: mikrobus0-pwm-default-pins {
		pinctrl-single,pins = <
		AM62X_IOPAD(0x020c, PIN_OUTPUT, 2) /* MMC0_DAT2.EHRPWM1_A */
		>;
	};

	main_mmc1_pins_default: main-mmc1-default-pins {
		bootph-all;
		pinctrl-single,pins = <
			AM62X_IOPAD(0x23c, PIN_INPUT, 0) /* (A21/C18) MMC1_CMD */
			AM62X_IOPAD(0x234, PIN_INPUT, 0) /* (B22/A20) MMC1_CLK */
			AM62X_IOPAD(0x230, PIN_INPUT, 0) /* (A22/A19) MMC1_DAT0 */
			AM62X_IOPAD(0x22c, PIN_INPUT, 0) /* (B21/B19) MMC1_DAT1 */
			AM62X_IOPAD(0x228, PIN_INPUT, 0) /* (C21/B20) MMC1_DAT2 */
			AM62X_IOPAD(0x224, PIN_INPUT, 0) /* (D22/C19) MMC1_DAT3 */
			AM62X_IOPAD(0x240, PIN_INPUT, 0) /* (D17/C15) MMC1_SDCD */
		>;
	};

	vdd_sd_dv_pins_default: vdd-sd-dv-default-pins {
		bootph-all;
		pinctrl-single,pins = <
			AM62X_IOPAD(0x244, PIN_OUTPUT, 7) /* MMC1_SDWP.GPIO1_49 */
		>;
	};

	vdd_mmc1_pins_default: vdd-mmc1-default-pins {
		bootph-all;
		pinctrl-single,pins = <
			AM62X_IOPAD(0x030, PIN_OUTPUT, 7) /* OSPI0_CSn1.GPIO0_12 */
		>;
	};

	pmic_irq_pins_default: pmic-irq-default-pins {
		pinctrl-single,pins = <
			AM62X_IOPAD(0x01f4, PIN_INPUT_PULLUP, 0) /* (D16) EXTINTn */
		>;
	};
};

&mcu_pmx0 {
	wkup_uart0_pins_default: wkup-uart0-default-pins {
		bootph-pre-ram;
		pinctrl-single,pins = <
			AM62X_MCU_IOPAD(0x02c, PIN_INPUT, 0) /* WKUP_UART0_CTSn.WKUP_UART0_CTSn */
			AM62X_MCU_IOPAD(0x030, PIN_OUTPUT, 0) /* WKUP_UART0_RTSn.WKUP_UART0_RTSn */
			AM62X_MCU_IOPAD(0x024, PIN_INPUT, 0) /* WKUP_UART0_RXD.WKUP_UART0_RTSn */
			AM62X_MCU_IOPAD(0x028, PIN_OUTPUT, 0) /* WKUP_UART0_TXD.WKUP_UART0_TXD */
		>;
	};
};

&wkup_uart0 {
	/* WKUP UART0 is used by DM firmware */
	bootph-pre-ram;
	status = "reserved";
	pinctrl-names = "default";
	pinctrl-0 = <&wkup_uart0_pins_default>;
};

&main_uart0 {
	/* Linux console */
	bootph-all;
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&main_uart0_pins_default>;
	interrupts-extended = <&gic500 GIC_SPI 178 IRQ_TYPE_LEVEL_HIGH>,
			       <&main_pmx0 0x1c8>; /* UART0_RXD PADCONFIG114 */
	interrupt-names = "irq", "wakeup";
};

&main_uart1 {
	/* Main UART1 is used by TIFS firmware */
	bootph-pre-ram;
	status = "reserved";
};

&main_gpio0 {
	bootph-all;
};

&main_gpio1 {
	bootph-all;
};

&main_i2c0 {
	bootph-all;
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&main_i2c0_pins_default>;
	clock-frequency = <400000>;

	tps65219: pmic@30 {
		bootph-all;
		compatible = "ti,tps65219";
		reg = <0x30>;
		buck1-supply = <&vcc_3v3>;
		buck2-supply = <&vcc_3v3>;
		buck3-supply = <&vcc_3v3>;
		ldo1-supply = <&vcc_3v3>;
		ldo2-supply = <&buck2_reg>;
		ldo3-supply = <&vcc_3v3>;
		ldo4-supply = <&vcc_3v3>;

		pinctrl-names = "default";
		pinctrl-0 = <&pmic_irq_pins_default>;
		interrupt-parent = <&gic500>;
		interrupts = <GIC_SPI 224 IRQ_TYPE_LEVEL_HIGH>;
		interrupt-controller;
		#interrupt-cells = <1>;

		system-power-controller;
		ti,power-button;

		regulators {
			buck1_reg: buck1 {
				regulator-name = "VDD_CORE";
				regulator-min-microvolt = <850000>;
				regulator-max-microvolt = <850000>;
				regulator-boot-on;
				regulator-always-on;
			};

			buck2_reg: buck2 {
				regulator-name = "VDD_1V8";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <1800000>;
				regulator-boot-on;
				regulator-always-on;
			};

			buck3_reg: buck3 {
				regulator-name = "VDD_1V2";
				regulator-min-microvolt = <1200000>;
				regulator-max-microvolt = <1200000>;
				regulator-boot-on;
				regulator-always-on;
			};

			ldo1_reg: ldo1 {
				/*
				 * Regulator is left as is unused, vdd_sd
				 * is controlled via GPIO with bypass config
				 * as per the NVM configuration
				 */
				regulator-name = "VDD_SD_3V3";
				regulator-min-microvolt = <3300000>;
				regulator-max-microvolt = <3300000>;
				regulator-allow-bypass;
				regulator-boot-on;
				regulator-always-on;
			};

			ldo2_reg: ldo2 {
				regulator-name = "VDDA_0V85";
				regulator-min-microvolt = <850000>;
				regulator-max-microvolt = <850000>;
				regulator-boot-on;
				regulator-always-on;
			};

			ldo3_reg: ldo3 {
				regulator-name = "VDDA_1V8";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <1800000>;
				regulator-boot-on;
				regulator-always-on;
			};

			ldo4_reg: ldo4 {
				regulator-name = "VDD_2V5";
				regulator-min-microvolt = <2500000>;
				regulator-max-microvolt = <2500000>;
				regulator-boot-on;
				regulator-always-on;
			};
		};
	};

	adc1: adc@51 {
		compatible = "ti,adc121c";
		reg = <0x51>;
		vref-supply = <&vcc_3v3_sys>;
	};

	adc2: adc@52 {
		compatible = "ti,adc121c";
		reg = <0x52>;
		vref-supply = <&vcc_3v3_sys>;
	};

	eeprom@50 {
		compatible = "atmel,24c32";
		reg = <0x50>;
	};
};


&sdhci1 {
	/* SD/MMC */
	vmmc-supply = <&vdd_mmc1>;
	vqmmc-supply = <&vdd_sd_dv>;
	bootph-all;
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&main_mmc1_pins_default>;
	disable-wp;
};

&mailbox0_cluster0 {
	mbox_m4_0: mbox-m4-0 {
		ti,mbox-rx = <0 0 0>;
		ti,mbox-tx = <1 0 0>;
	};
	mbox_r5_0: mbox-r5-0 {
		ti,mbox-rx = <2 0 0>;
		ti,mbox-tx = <3 0 0>;
	};
};

&usb1 {
	dr_mode = "host";
};

&mcu_m4fss {
	mboxes = <&mailbox0_cluster0 &mbox_m4_0>;
	memory-region = <&mcu_m4fss_dma_memory_region>,
			<&mcu_m4fss_memory_region>;
	status = "okay";
};

&wkup_r5fss0_core0 {
	mboxes = <&mailbox0_cluster0 &mbox_r5_0>;
	memory-region = <&wkup_r5fss0_core0_dma_memory_region>,
			<&wkup_r5fss0_core0_memory_region>;
};

&usbss0 {
	bootph-all;
	status = "okay";
	ti,vbus-divider;
};

&usbss1 {
	status = "okay";
	ti,vbus-divider;
};

&usb0 {
	bootph-all;
	dr_mode = "otg";
};

&dss_oldi_io_ctrl {
	bootph-all;
};

&main_i2c1 {
	pinctrl-names = "default";
	pinctrl-0 = <&mikrobus1_i2c_pins_default>;
	clock-frequency = <400000>;
	status = "okay";
};

&main_uart5 {
	pinctrl-names = "default";
	pinctrl-0 = <&mikrobus1_uart_pins_default>;
	status = "okay";
};

&main_spi0 {
	pinctrl-names = "default";
	pinctrl-0 = <&mikrobus1_spi_pins_default>;
	status = "okay";
	spidev0: spidev0@0 {
			compatible = "rohm,dh2228fv";
			reg = <0>;
			spi-max-frequency = <25000000>;
	};
};

&main_i2c3 {
	pinctrl-names = "default";
	pinctrl-0 = <&mikrobus0_i2c_pins_default>;
	clock-frequency = <400000>;
	status = "okay";
};

&main_uart2 {
	pinctrl-names = "default";
	pinctrl-0 = <&mikrobus0_uart_pins_default>;
	status = "okay";
};

&main_spi2 {
	pinctrl-names = "default";
	pinctrl-0 = <&mikrobus0_spi_pins_default>;
	status = "okay";
	spidev2: spidev2@0 {
			compatible = "rohm,dh2228fv";
			reg = <0>;
			spi-max-frequency = <25000000>;
	};
};

&epwm0 {
	pinctrl-names = "default";
	pinctrl-0 = <&mikrobus1_pwm_pins_default>;
	status = "okay";
};

&epwm1 {
	pinctrl-names = "default";
	pinctrl-0 = <&mikrobus0_pwm_pins_default>;
	status = "okay";
};

/* mcu_gpio0 and mcu_gpio_intr are reserved for mcu firmware usage */
&mcu_gpio0 {
	status = "reserved";
};

&mcu_gpio_intr {
	status = "reserved";
};


/* For jailhouse */
&main_uart1 {
	status = "disabled";
};

&sdhci0 {
	status = "disabled";
};


&main_pktdma {
	bootph-all;
};
