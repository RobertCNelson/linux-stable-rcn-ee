	ti,no-reset-on-init;
};

&mmu_ipu2{
	ti,no-idle-on-init;
	ti,no-reset-on-init;
};

&ipu2_memory_region {
	/delete-property/ reusable;
	no-map;
};

&ipu2 {
	ti,no-idle-on-init;
	ti,no-reset-on-init;
};

